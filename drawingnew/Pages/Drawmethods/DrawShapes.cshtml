@page
@model drawingnew.Pages.Drawmethods.DrawShapesModel
@{
}
<div>
   <form id="frmdrawshapes">
       <div class="form-group row mb-5">
           <div class="col-md-6">
               <label asp-for="@Model.dimension.Name">Name</label>
                <input type="text" class="form-control" asp-for="@Model.dimension.Name" id="txt_shapeName" />
                <input type="hidden" id="txt_dimensionId" />
           </div>
            <div class="col-md-6">
                <label asp-for="@Model.dimension.Email">Email</label>
                <input type="email" class="form-control" asp-for="@Model.dimension.Email" id="txt_shapeemail" />

            </div>
       </div>
        <div class="form-group row">
            <div class="col-md-12">
                @*<canvas id="canvas_circle" class="form-control toggle-circle" style="border:1px solid #000000;" asp-for="@Model.Dimensionfield"></canvas>*@
                <canvas id="canvas_circle" class="form-control toggle-circle" style="border:1px solid #000000;" ></canvas>
                <div id="button-circle" class="toggle-circle">
                    <input type="button" id="clear" value="Clear">
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-12">
                <button class="btn btn-success" id="btn_DrawShapeSave">Save</button>
            </div>
        </div>
   </form>
</div>
